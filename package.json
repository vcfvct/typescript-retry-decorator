{
  "name": "typescript-retry-decorator",
  "version": "2.5.4",
  "description": "A simple retry decorator for typescript with no dependency.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "typings": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "example": "tsx src/example.ts",
    "lint": "eslint src/",
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json && cp esm-package.json dist/esm/package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vcfvct/typescript-retry-decorator.git"
  },
  "keywords": [
    "typescirpt",
    "decorator",
    "retry"
  ],
  "author": "Han Li",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vcfvct/typescript-retry-decorator/issues"
  },
  "homepage": "https://github.com/vcfvct/typescript-retry-decorator#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^18.19.74",
    "eslint": "^9.26.0",
    "globals": "^17.2.0",
    "tsx": "^4.21.0",
    "typescript": "5.4.5",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.0"
  }
}
